<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mriogalvojnior.tap4personal.InfoAlunoActivity">

    <TextView
        android:id="@+id/text_nomeAtleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nome"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nomeAluno"
        android:layout_marginTop="40sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Categoria: "
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_catAtleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_nomeAluno"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:text="Idade"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_idade"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/llidade"
        android:background="@android:color/darker_gray"></View>

    <LinearLayout
        android:id="@+id/llsexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_idade"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_idade"
            android:layout_marginTop="15sp"
            android:text="Treinador: "
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/text_treinadorAtleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_idade"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:text="Sexo"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_sexo"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/llsexo"
        android:background="@android:color/darker_gray"></View>

    <ImageView
        android:id="@+id/iv_trofes"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/view_sexo"
        android:layout_marginTop="20sp"
        android:src="@drawable/trofeus" />

    <TextView
        android:id="@+id/text_trofeus"
        android:layout_below="@id/iv_trofes"
        android:text="Conquistas"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
