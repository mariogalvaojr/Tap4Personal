<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mriogalvojnior.tap4personal.HistoricoAlunoActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_hitoricoAlunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar">

        <ImageView
            android:id="@+id/iv_back_histAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowleft" />

        <TextView
            android:id="@+id/title_toolbar_histAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Históricos do Aluno"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="100sp"
            android:src="@drawable/personal" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Históricos"
        android:visibility="gone"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/textAvisoHistorico"
        android:textStyle="italic"
        android:textColor="@android:color/secondary_text_light"
        android:layout_below="@+id/toolbar_hitoricoAlunos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_add_histotico"
        android:layout_width="match_parent"
        android:src="@drawable/addblack"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        app:fab_size="mini"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fab_colorPressed="@android:color/holo_red_dark"
        app:fab_colorNormal="@android:color/white"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lista_historico"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/textAvisoHistorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>
